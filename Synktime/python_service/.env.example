# SNKTIME Biometric Service Configuration - Windows
# Copia este archivo como .env en el directorio del servicio

# Server settings
HOST=127.0.0.1
PORT=8000
DEBUG=true

# Database settings
DB_HOST=localhost
DB_PORT=3306
DB_NAME=synktime
DB_USER=root
DB_PASSWORD=

# InsightFace settings
INSIGHTFACE_MODEL_PATH=models
INSIGHTFACE_MODEL_NAME=buffalo_l
FACE_DETECTION_THRESHOLD=0.5
FACE_RECOGNITION_THRESHOLD=0.6

# Hardware settings
FPRINTD_TIMEOUT=30
RFID_TIMEOUT=10
USB_SCAN_TIMEOUT=5

# Logging
LOG_LEVEL=INFO

# Windows specific settings
# Path to Python executable (opcional)
PYTHON_PATH=C:\Python39\python.exe

# Virtual environment path (opcional)
VENV_PATH=venv

# Log file path
LOG_FILE=logs\service.log
